<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="75sp"
            android:id="@+id/temperatureLabel"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/locationLabel"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/degree_image_view"
            android:src="@mipmap/final_degree"
            android:layout_above="@+id/linearLayout"
            android:layout_toEndOf="@+id/temperatureLabel"
            android:layout_marginBottom="47dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central Park NY"
            android:id="@+id/locationLabel"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/summaryLabel"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/icon_image_view"
            android:src="@mipmap/cloudy_night"
            android:layout_marginLeft="68dp"
            android:background="@null"
            android:layout_marginStart="63dp"
            android:layout_alignTop="@+id/degree_image_view"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperatureLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="HUMIDITY"
                    android:textColor="#000000"
                    android:id="@+id/humidityLabel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:id="@+id/humidityValue"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Rain"
                    android:id="@+id/precipLabel"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:id="@+id/precipValue"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Getting corrent weather ..."
            android:textSize="18sp"
            android:layout_marginBottom="38dp"
            android:textColor="#000000"
            android:id="@+id/summaryLabel"
            android:layout_above="@+id/temperatureLabel"
            android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_weather"
        android:background="@null"
        android:textColor="#d3d3d3"
        android:id="@+id/bt_website"

        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIND"
        android:id="@+id/tv_wind"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/temperatureLabel"
        android:layout_alignStart="@+id/locationLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:id="@+id/windValue"
        android:layout_alignTop="@+id/tv_wind"
        android:layout_alignEnd="@+id/temperatureLabel"/>

</RelativeLayout>




