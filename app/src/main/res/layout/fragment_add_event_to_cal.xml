<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="madelyntav.c4q.nyc.googlecards.AddEventToCal">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newTitle"
        android:gravity="center"
        android:hint="New Event Title"
        android:background="@null"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newLocation"
        android:gravity="center"
        android:hint="Location"
        android:textSize="30dp"
        android:layout_below="@+id/newTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newDescription"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:textStyle="italic"
        android:textSize="20dp"
        android:hint="Description"
        android:layout_marginBottom="45dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newLocation"
        android:layout_centerHorizontal="true" />

